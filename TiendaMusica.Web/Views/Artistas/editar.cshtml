@model TiendaMusica.Logica.ViewModels.EditAlbumViewModel

@{
    ViewBag.Title = "editar";
}

<h2>editar</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("editar","Artistas",FormMethod.Post,
                new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>EditAlbumViewModel</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.NombreAlbum, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NombreAlbum, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreAlbum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Portada: </label>
                    <input name="portada" type="file" />
                    <input type="hidden" value="@Model.idAlbum" name="idAlbum" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                    
                </div>
            </div>

        }
    </div>
    <div class="col-md-6">
        @if ( Model.Portada != null)
        {
            <img src="/Albums/Thumbnails/thumbnail_@Model.Portada" />
        }
        else
        {
            <img src="/Albums/Thumbnails/nocover.jpg" />
        }

    </div>
</div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
