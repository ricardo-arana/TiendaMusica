@model IEnumerable<TiendaMusica.Logica.ViewModels.AlbumsPorArtistaViewModel>
@using TiendaMusica.Logica.Comun
@{
    ViewBag.Title = "perfil";
}

<h2>@Model.First().Artista</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">

    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                @if (item.Portada != null)
                {
                    <img src="/Albums/Thumbnails/thumbnail_@item.Portada" alt="...">
                }
                else
                {
                    <img src="/Albums/Thumbnails/nocover.jpg" />
                }
                
                <div class="caption">
                    <h3>@item.Album</h3>
                    <p>@item.Artista</p>
                    <p><a href="/Admin/@(Utilidades.TransformarNombre2(item.Artista))/@Utilidades.TransformarNombre2(item.Album)/editar" class="btn btn-primary" role="button">Editar</a>
                     <a href="/tienda/@(Utilidades.TransformarNombre2(item.Artista))/@Utilidades.TransformarNombre2(item.Album)/tracks" class="btn btn-default" role="button">Tracks</a></p>
                </div>
            </div>
        </div>

    }
</div>

